<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateEvent" >

    <EditText
        android:id="@+id/create_event_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/create_event_date"
        android:layout_toLeftOf="@+id/create_event_date"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_year"
        android:layout_alignBottom="@+id/create_event_year"
        android:layout_toRightOf="@+id/create_event_year"
        android:text="---"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/create_event_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/create_event_date"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/create_event_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_month"
        android:layout_alignBottom="@+id/create_event_month"
        android:layout_alignRight="@+id/create_event_date"
        android:text="----"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/create_event_hour_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/create_event_duration"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_hour_input"
        android:layout_alignBottom="@+id/create_event_hour_input"
        android:layout_alignLeft="@+id/create_event_month"
        android:text="hour(s)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event_hour_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Please enter venue"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/create_event_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_event_event_name"
        android:layout_below="@+id/textView4"
        android:ems="10" />

    <TextView
        android:id="@+id/create_event_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event_year"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="Please enter duration"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/create_event_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/create_event_venue"
        android:text="Create event" />

    <EditText
        android:id="@+id/create_event_event_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event_event_name"
        android:layout_centerHorizontal="true"
        android:ems="10" />

    <TextView
        android:id="@+id/create_event_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/create_event_event_name_input"
        android:layout_marginTop="20dp"
        android:text="Please enter event name:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/create_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event_event_name_input"
        android:layout_centerHorizontal="true"
        android:text="Please enter date:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/create_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_event_event_name"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/create_event_day"
        android:layout_below="@+id/create_event_year"
        android:text="Please enter starting time(0-23):"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>

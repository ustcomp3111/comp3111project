<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateEvent" >

    <EditText
        android:id="@+id/create_event_month"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event_date"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/trytry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_month"
        android:layout_alignBottom="@+id/create_event_month"
        android:layout_toLeftOf="@+id/create_event_month"
        android:text="----"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/t_ename2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_month"
        android:layout_alignBottom="@+id/create_event_month"
        android:layout_toRightOf="@+id/create_event_month"
        android:text="----"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/create_event_year"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/trytry"
        android:layout_alignBottom="@+id/trytry"
        android:layout_toLeftOf="@+id/trytry"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/create_event_day"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event_date"
        android:layout_toRightOf="@+id/t_ename2"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/create_event_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/create_event_time"
        android:layout_marginTop="16dp"
        android:text="Duration:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_event_duration"
        android:layout_below="@+id/create_event_duration"
        android:layout_marginTop="16dp"
        android:text="Venue:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/b_create_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Create event" />

    <TextView
        android:id="@+id/create_event_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Event name:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/create_event_event_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/create_event_day"
        android:layout_below="@+id/create_event_event_name"
        android:ems="10" />

    <TextView
        android:id="@+id/create_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/create_event_event_name_input"
        android:text="Date (YYYY-MM-DD):"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/create_event_month"
        android:layout_marginTop="14dp"
        android:text="Starting time (0-23):"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/create_event_time"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/create_event_date"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/create_event_hour_input"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/create_event_duration"
        android:layout_toRightOf="@+id/create_event_duration"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/create_event_hour_input"
        android:layout_toRightOf="@+id/create_event_hour_input"
        android:text="hour(s)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/create_event_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event_duration"
        android:layout_toRightOf="@+id/textView4"
        android:ems="10" />

</RelativeLayout>
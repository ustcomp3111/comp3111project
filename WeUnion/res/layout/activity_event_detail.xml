<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Event_detail" >

    <TextView
        android:id="@+id/event_detail_eventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Event Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/event_detail_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/event_detail_holder"
        android:layout_below="@+id/event_detail_duration"
        android:text="Venue:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/event_detail_duration_value"
        android:layout_alignBottom="@+id/event_detail_duration_value"
        android:layout_alignRight="@+id/event_detail_venue"
        android:text="Duration:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_detail_eventname"
        android:layout_toLeftOf="@+id/event_detail_eventname"
        android:text="Host"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_begin_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_detail_holder"
        android:layout_toLeftOf="@+id/event_detail_eventname"
        android:text="Begins at:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_detail_begin_time"
        android:layout_toLeftOf="@+id/event_detail_eventname"
        android:text="Ends at:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/event_detail_msg_box_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+android:id/event_detail_viewpager"
        android:layout_centerHorizontal="true"
        android:text="Message box" />

    <TextView
        android:id="@+id/event_detail_begin_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_detail_end_time"
        android:layout_alignLeft="@+id/event_detail_event_holder_value"
        android:text="(none)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_end_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/event_detail_end_time"
        android:layout_alignBottom="@+id/event_detail_end_time"
        android:layout_alignLeft="@+id/event_detail_begin_time_value"
        android:text="(none)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_duration_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/event_detail_end_time_value"
        android:layout_below="@+id/event_detail_end_time_value"
        android:text="(none)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_venue_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/event_detail_venue"
        android:layout_alignBottom="@+id/event_detail_venue"
        android:layout_alignLeft="@+id/event_detail_duration_value"
        android:text="(none)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_guest_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_detail_venue_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Guests"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <android.support.v4.view.ViewPager
        android:id="@+android:id/event_detail_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="254dp"
        android:layout_below="@+id/event_detail_guest_list"
        android:layout_centerHorizontal="true" >
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/event_detail_event_holder_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_detail_begin_time_value"
        android:layout_alignLeft="@+id/event_detail_eventname"
        android:text="(none)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
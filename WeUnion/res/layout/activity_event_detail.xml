

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Event_detail" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/event_detail_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Event Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/event_detail_begin_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/event_detail_holder"
        android:layout_below="@+id/event_detail_holder"
        android:text="Begins at: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/event_detail_begin_time"
        android:layout_below="@+id/event_detail_begin_time"
        android:text="Ends at: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/event_detail_end_time"
        android:layout_below="@+id/event_detail_end_time"
        android:text="Duration: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/event_detail_duration"
        android:layout_below="@+id/event_detail_duration"
        android:text="Venue: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_begin_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/event_detail_event_holder_value"
        android:layout_below="@+id/event_detail_holder"
        android:text="(none)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_end_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_detail_duration"
        android:layout_alignLeft="@+id/event_detail_begin_time_value"
        android:text="(none)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_value_of_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/event_detail_end_time_value"
        android:layout_below="@+id/event_detail_end_time_value"
        android:text="(none)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_venue_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/event_detail_value_of_duration"
        android:layout_below="@+id/event_detail_value_of_duration"
        android:text="(none)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/event_detail_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_detail_event_name"
        android:layout_toLeftOf="@+id/event_detail_guest_list"
        android:text="Host: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

   

    <TextView
        android:id="@+id/event_detail_guest_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_detail_venue"
        android:layout_centerHorizontal="true"
        android:text="Guests"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/create_event_pending_guest_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/create_event_not_going_guest_button"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/create_event_not_going_guest_button"
        android:layout_toRightOf="@+id/create_event_not_going_guest_button"
        android:text="Pending: 00" />

    <Button
        android:id="@+id/create_event_all_guest_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/create_event_going_guest_button"
        android:layout_toLeftOf="@+id/create_event_going_guest_button"
        android:text="All: 00" />

    <Button
        android:id="@+id/create_event_not_going_guest_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+android:id/event_detail_viewpager"
        android:layout_toRightOf="@+id/event_detail_venue"
        android:text="Decline: 00" />

    <Button
        android:id="@+id/create_event_going_guest_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_detail_guest_list"
        android:layout_toLeftOf="@+id/create_event_not_going_guest_button"
        android:text="Join: 00" />

    <Button
        android:id="@+id/event_detail_msg_box_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/event_detail_event_name"
        android:layout_alignParentBottom="true"
        android:text="Message box" />

    <android.support.v4.view.ViewPager
        android:id="@+android:id/event_detail_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="254dp"
        android:layout_alignLeft="@+id/create_event_all_guest_button"
        android:layout_below="@+id/create_event_all_guest_button" >
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/event_detail_event_holder_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_detail_begin_time_value"
        android:layout_toRightOf="@+id/linearLayout1"
        android:text="(none)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
